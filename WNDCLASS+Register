typedef struct tagWNDCLASSA
{
    UINT        style;                  
    WNDPROC     lpfnWndProc;            //Windows Process (“lpfn” means “long pointer to a function”, in Win32 : long pointer = short pointer)
    int         cbClsExtra;             //Class Extra (“cb” = “count of byte”)
    int         cbWndExtra;             //Windows Extra
    HINSTANCE   hInstance;              //Instance
    HICON       hIcon;                  //Icon
    HCURSOR     hCursor;                //Cursor
    HBRUSH      hbrBackground;          //Background (“hbr” = “handle to a brush”)
    LPCSTR      lpszMenuName;           // (“lpsz” = “long pointer to a string terminated with a zero”)
    LPCSTR      lpszClassName;
}
WNDCLASSA, *PWNDCLASSA, NEAR *NPWNDCLASSA, FAR *LPWNDCLASSA;